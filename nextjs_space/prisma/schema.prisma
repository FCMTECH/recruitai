
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/ats_platform/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  emailVerified DateTime?
  image         String?
  companyName   String?
  role          String    @default("company") // "company" or "superadmin"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  jobs          Job[]
  subscriptions Subscription[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Job {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  requirements String  @db.Text
  location    String?
  type        String   @default("full-time") // full-time, part-time, contract
  status      String   @default("active") // active, paused, closed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  criteria     JobCriteria[]
  applications Application[]
  stages       JobStage[]
}

model JobCriteria {
  id          String @id @default(cuid())
  jobId       String
  name        String // "Experiência", "Habilidades Técnicas", "Formação", etc.
  description String @db.Text
  weight      Float  @default(1.0) // Peso de 0.1 a 1.0
  required    Boolean @default(false) // Obrigatório ou desejável
  category    String // "experience", "skills", "education", "location", "languages", "other"

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)
}

model Application {
  id                String   @id @default(cuid())
  jobId             String
  candidateName     String
  candidateEmail    String
  candidatePhone    String?
  resumeUrl         String   // S3 path
  resumeFilename    String
  
  // AI Analysis Results
  aiAnalysis        Json?    // Parsed resume data
  compatibilityScore Float?   // 0-100 score
  classification    String?  // "strong", "potential", "review", "incompatible"
  scoreExplanation  String?  @db.Text // AI explanation
  highlights        Json?    // Key experiences/skills
  criteriaScores    Json?    // Score breakdown by criteria
  
  // Application Status
  status            String   @default("pending") // pending, approved, rejected
  currentStageId    String?
  notes             String?  @db.Text
  reviewedAt        DateTime?
  
  // Candidate Profile
  candidateProfileId String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)
  currentStage JobStage? @relation(fields: [currentStageId], references: [id])
  candidateProfile CandidateProfile? @relation(fields: [candidateProfileId], references: [id])

  @@index([jobId])
  @@index([status])
  @@index([compatibilityScore])
  @@index([currentStageId])
  @@index([candidateProfileId])
  @@index([candidateEmail])
}

model Plan {
  id          String   @id @default(cuid())
  name        String   @unique // "bronze", "prata", "ouro", "personalizado"
  displayName String   // "Bronze", "Prata", "Ouro", "Personalizado"
  price       Float    // Em Reais (R$)
  jobLimit    Int      // Número de vagas por mês
  features    Json     // Array de features do plano
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  subscriptions Subscription[]
}

model Subscription {
  id                  String    @id @default(cuid())
  userId              String
  planId              String
  
  // Stripe Info
  stripeCustomerId    String?   @unique
  stripeSubscriptionId String?  @unique
  stripeCheckoutSessionId String? // Para rastrear sessões de checkout
  
  // Subscription Status
  status              String    @default("trial") // trial, active, past_due, canceled, expired
  currentPeriodStart  DateTime?
  currentPeriodEnd    DateTime?
  trialEndsAt         DateTime? // Para o período de teste de 1 semana
  canceledAt          DateTime?
  
  // Usage Tracking
  jobsCreatedThisMonth Int      @default(0)
  jobsCreatedAt        DateTime? // Para resetar o contador mensalmente
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

// Fases personalizadas das vagas
model JobStage {
  id           String        @id @default(cuid())
  jobId        String
  name         String
  description  String?       @db.Text
  order        Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  job          Job           @relation(fields: [jobId], references: [id], onDelete: Cascade)
  applications Application[]

  @@index([jobId])
  @@index([order])
}

// Perfil completo do candidato
model CandidateProfile {
  id                String          @id @default(cuid())
  email             String          @unique
  fullName          String
  phone             String?
  dateOfBirth       DateTime?
  gender            String?
  address           String?
  city              String?
  state             String?
  zipCode           String?
  country           String?          @default("Brasil")
  linkedinUrl       String?
  portfolioUrl      String?
  githubUrl         String?
  summary           String?          @db.Text
  resumeUrl         String?
  photoUrl          String?
  
  // Relacionamentos
  education         Education[]
  experiences       Experience[]
  skills            Skill[]
  courses           Course[]
  certifications    Certification[]
  applications      Application[]
  
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([email])
  @@index([fullName])
  @@index([city])
  @@index([state])
}

// Escolaridade
model Education {
  id              String           @id @default(cuid())
  candidateId     String
  institution     String
  degree          String           // "Ensino Médio", "Tecnólogo", "Bacharelado", "Licenciatura", "Pós-graduação", "Mestrado", "Doutorado"
  fieldOfStudy    String
  startDate       DateTime
  endDate         DateTime?
  isCurrent       Boolean          @default(false)
  description     String?          @db.Text
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

// Experiência Profissional
model Experience {
  id              String           @id @default(cuid())
  candidateId     String
  company         String
  position        String
  location        String?
  startDate       DateTime
  endDate         DateTime?
  isCurrent       Boolean          @default(false)
  description     String?          @db.Text
  achievements    Json?            // Lista de conquistas
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

// Competências/Habilidades
model Skill {
  id                String           @id @default(cuid())
  candidateId       String
  name              String
  level             String           // "iniciante", "intermediário", "avançado", "expert"
  yearsOfExperience Int?
  category          String?          // "técnica", "comportamental", "idioma"
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  
  candidate         CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
  @@index([category])
}

// Cursos
model Course {
  id              String           @id @default(cuid())
  candidateId     String
  name            String
  institution     String
  completionDate  DateTime?
  workload        Int?             // Carga horária em horas
  description     String?          @db.Text
  certificateUrl  String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

// Certificações
model Certification {
  id              String           @id @default(cuid())
  candidateId     String
  name            String
  issuingOrg      String           // Organização emissora
  issueDate       DateTime
  expiryDate      DateTime?
  credentialId    String?
  credentialUrl   String?
  description     String?          @db.Text
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  candidate       CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}
