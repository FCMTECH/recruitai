
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          String    @default("candidate") // candidate, company, superadmin
  companyName   String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts      Account[]
  sessions      Session[]
  jobs          Job[]
  subscriptions Subscription[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CandidateProfile {
  id          String   @id @default(cuid())
  email       String   @unique
  fullName    String?
  phone       String?
  dateOfBirth DateTime?
  address     String?
  street      String?      // Novo campo para logradouro
  neighborhood String?    // Novo campo para bairro
  city        String?
  state       String?
  country     String?
  zipCode     String?
  profession  String?      // Novo campo para profissão
  photoUrl    String?
  linkedinUrl String?
  resumeUrl   String?      // S3 path
  hasNoExperience Boolean @default(false) // Novo campo
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  education      Education[]
  experiences    Experience[]
  skills         Skill[]
  courses        Course[]
  certifications Certification[]
  applications   Application[]

  @@index([email])
}

model Education {
  id           String    @id @default(cuid())
  candidateId  String
  institution  String
  degree       String
  courseName   String?   // Renomeado de fieldOfStudy
  fieldOfStudy String?   // Mantido para compatibilidade
  startDate    DateTime?
  endDate      DateTime?
  isCurrent    Boolean   @default(false)
  description  String?   @db.Text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

model Experience {
  id          String    @id @default(cuid())
  candidateId String
  company     String
  position    String
  jobType     String?   // Novo campo: tipo de cargo
  location    String?
  startDate   DateTime?
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  description String?   @db.Text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

model Skill {
  id          String   @id @default(cuid())
  candidateId String
  name        String
  level       String   // básico, intermediário, avançado
  category    String?  // técnica, comportamental, idioma
  
  createdAt DateTime @default(now())

  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

model Course {
  id           String   @id @default(cuid())
  candidateId  String
  name         String
  institution  String?
  completionDate DateTime?
  hours        Int?
  description  String?  @db.Text
  
  createdAt DateTime @default(now())

  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

model Certification {
  id           String   @id @default(cuid())
  candidateId  String
  name         String
  issuingOrg   String
  issueDate    DateTime?
  expiryDate   DateTime?
  credentialId String?
  
  createdAt DateTime @default(now())

  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
}

model Job {
  id           String   @id @default(cuid())
  userId       String
  title        String
  description  String   @db.Text
  requirements String?  @db.Text
  location     String?
  country      String?
  state        String?
  city         String?
  type         String?  // full-time, part-time, contract, etc.
  status       String   @default("active") // active, paused, closed
  
  companyName  String   @default("Empresa")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications Application[]
  criteria     JobCriteria[]
  stages       JobStage[]

  @@index([userId])
  @@index([status])
}

model JobStage {
  id          String   @id @default(cuid())
  jobId       String
  name        String
  description String?  @db.Text
  order       Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  job          Job           @relation(fields: [jobId], references: [id], onDelete: Cascade)
  applications Application[]

  @@index([jobId])
}

model JobCriteria {
  id          String @id @default(cuid())
  jobId       String
  criterion   String @default("Critério")
  weight      Float  // Weight percentage (0-100)
  description String? @db.Text

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)
}

model Application {
  id                String   @id @default(cuid())
  jobId             String
  candidateName     String
  candidateEmail    String
  candidatePhone    String?
  resumeUrl         String   // S3 path
  resumeFilename    String
  
  // AI Analysis Results
  aiAnalysis        Json?    // Parsed resume data
  compatibilityScore Float?   // 0-100 score
  classification    String?  // "strong", "potential", "review", "incompatible"
  scoreExplanation  String?  @db.Text // AI explanation
  highlights        Json?    // Key experiences/skills
  criteriaScores    Json?    // Score breakdown by criteria
  
  // Application Status
  status            String   @default("pending") // pending, approved, rejected
  currentStageId    String?
  notes             String?  @db.Text
  reviewedAt        DateTime?
  
  // Candidate Profile
  candidateProfileId String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)
  currentStage JobStage? @relation(fields: [currentStageId], references: [id])
  candidateProfile CandidateProfile? @relation(fields: [candidateProfileId], references: [id])

  @@index([jobId])
  @@index([status])
  @@index([compatibilityScore])
  @@index([currentStageId])
  @@index([candidateProfileId])
  @@index([candidateEmail])
}

model Plan {
  id          String   @id @default(cuid())
  name        String   @unique // "free", "bronze", "prata", "ouro", "personalizado"
  displayName String   // "Grátis", "Bronze", "Prata", "Ouro", "Personalizado"
  price       Float    // Em Reais (R$)
  jobLimit    Int      // Número de vagas por mês
  features    String[] // Lista de features
  isActive    Boolean  @default(true)
  stripePriceId String? // Stripe price ID for recurring billing
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscriptions Subscription[]
}

model Subscription {
  id                    String    @id @default(cuid())
  userId                String
  planId                String
  status                String    // trial, active, past_due, canceled, expired
  startDate             DateTime  @default(now())
  endDate               DateTime?
  trialEndDate          DateTime? // For trial period
  jobsCreatedThisMonth  Int       @default(0)
  lastResetDate         DateTime  @default(now())
  
  // Stripe fields
  stripeCustomerId      String?   @unique
  stripeSubscriptionId  String?   @unique
  stripeCheckoutSessionId String? @unique
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([planId])
  @@index([status])
}
